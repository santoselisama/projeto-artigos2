<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>
<div class="container">
    <br>
    <h2>Artigos</h2>
    <a class="btn btn-primary" href="/admin/articles/new"> Novo Artigo</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDeleca(event,this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-primary"> Excluir</button>
                        </form>
                        <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-primary">Editar</a>
                </tr>            
                </td>
            <% }) %>
        </tbody>
    </table>
 </div>
 <%- include ('../../partials/footer.ejs')%>
 <script>
     function confirmarDeleca(event,form){
         event.preventDefault();
         var decision = confirm("Você deseja mesmo deletar esse item?");
         if(decision){
             form.submit();
         }
     }
 </script>
