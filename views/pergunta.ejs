<%- include ('./partials/header')%>
<%- include ('./partials/navbar')%>
<body>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <label> Resposta :</label>
            <textarea placeholder="Escreva uma resposta..." class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="enviar" class="btn btn-primary"> Responder</button>
        </form>
        <hr>
        <h3>Respostas dessa pergunta : </h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %><br>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('./partials/footer')%>